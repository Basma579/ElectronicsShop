@model IEnumerable<ElectronicShope.OrderViewModel>

@{ ViewData["Title"] = "ConfirmOrder";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<br />
<br />



@if (Model.Count() == 0)
{

<div> <h1>No Order </h1></div> }
else
{
<h2>My Orders </h2>
                <br />

                                <br />
                                                <br />
                    <table class="table" style="border:none ; background-color:white">
                        <thead>
                            <tr>
                                <th>
                                    Product
                                </th>


                                <th>
                                    @Html.DisplayNameFor(model => model.Quantity)
                                </th>
                                <th>
                                    Price
                                </th>

                                <th>
                                    Total Price
                                </th>


                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @item.Quantity

                </td>
                <td> @item.Price</td>

                <td>
                    <label>
                        @Html.DisplayFor(modelItem => item.PriceAfterDiscount)
                    </label>


                </td>

                <td>
                </td>
            </tr>}


                        </tbody>
                        <tfoot>

                            <tr>
                                <th scope="row">Totals</th>
                                <td></td>
                                <td></td>
                                <td>  @Model.Sum(i => i.PriceAfterDiscount)</td>
                            </tr>
                        </tfoot>
                    </table>
}

